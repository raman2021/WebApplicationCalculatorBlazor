@page "/calculator"

<h1>Calculator Using Blazor</h1>
<hr />
<div>
    <div class="row">
        <div class="col-md-3">
            <p>Input 1</p>
        </div>
        <div class="col-md-4">
            <input placeholder="" @bind="@number1" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <p>Input 2</p>
        </div>
        <div class="col-md-4">
            <input placeholder="" @bind="number2" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <p>Result</p>
        </div>
        <div class="col-md-4">
            <input readonly @bind="@result" />
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-2">
            <button @onclick="Addition" class="btn btn-primary"> + </button>
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary"> − </button>

        </div>
        <div class="col-md-2">
            <button class="btn btn-success "> * </button>
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary"> / </button>
        </div>
        <div class="col-md-2">
            <button class="btn btn-success"> % </button>
        </div>
    </div>
</div>

@code { string number1;
    string number2;
    string result;
    void Addition()
    {
        result = (Convert.ToDouble(number1) + Convert.ToDouble(number2)).ToString();
    }
}