@page "/calculator"

<h1>Calculator Using Blazor</h1>
<hr />
<div>
    <div class="row">
        <div class="col-md-3">
            <p>Input 1</p>
        </div>
        <div class="col-md-4">
            <input placeholder="" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <p>Input 2</p>
        </div>
        <div class="col-md-4">
            <input placeholder="" />
        </div>
    </div>
    <br />
